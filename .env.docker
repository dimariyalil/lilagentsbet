# Telegram Configuration
# Получите токен у @BotFather в Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ID вашего Telegram аккаунта (напишите @userinfobot)
TELEGRAM_ADMIN_ID=your_telegram_user_id_here

# AI API Keys
# Получите на https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Опционально: получите на https://platform.openai.com/
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
REDIS_URL=redis://redis:6379
POSTGRES_URL=postgresql://postgres:password@postgres:5432/lil_agents

# ChromaDB Configuration
CHROMADB_HOST=chromadb
CHROMADB_PORT=8000

# n8n Integration (опционально)
N8N_WEBHOOK_URL=http://n8n:5678/webhook/your_webhook_id
N8N_API_KEY=your_n8n_api_key_here

# Agent Configuration
AGENT_NAME=lil_ken_ceo
AGENT_LANGUAGE=ru
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
API_RATE_LIMIT=100

